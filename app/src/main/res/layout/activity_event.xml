<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.honeybin.sketchu.AddEventActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nametitle"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/detailtitle"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/detailTxt"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:fontFamily="casual"
        android:hint="Tell me more @v@"
        android:textColorHint="@color/colorPrimaryDark"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/starttimetitle"
        android:id="@+id/imageView3"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/nameTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/endtimetitle"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setStartTimeButton"
        android:background="@null"
        android:visibility="visible"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/endTimeText"
        android:layout_toLeftOf="@+id/endTimeText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setEndTimeButton"
        android:background="@null"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/startTimeText"
        android:layout_toEndOf="@+id/startTimeText" />

    <TextView
        android:text="Start Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startTimeText"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:layout_alignTop="@+id/setStartTimeButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="End Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endTimeText"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:layout_below="@+id/startTimeText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="New Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/animation_sketchu"
        android:id="@+id/imageButton"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/detailTxt"
        android:layout_centerHorizontal="true"
        android:background="#00000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameTxt"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimaryDark"
        android:hint="What's your plan?"
        android:textStyle="normal|bold"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColorLink="@android:color/holo_green_light"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/detailTxt"
        android:layout_alignStart="@+id/detailTxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/backButton"
        android:background="@drawable/backbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/backButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/confirmButton"
        android:background="@drawable/confirmbutton" />

</RelativeLayout>
